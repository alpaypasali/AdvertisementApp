@model List<AdvertisementListDto>
@{

    Layout = "_Layout";
}

<div class="container-fluid">

    @{
        if (Model.Count > 0)
        {
            <div class="my-3 text-end">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>

            </div>


            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>İan Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durumu</th>
                        <th>İşlem</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td>@(item.Status ? "Aktif" : "Pasif")</td>

                            <td>

                                <a asp-action="Update" asp-controller="Application" asp-route-id="@item.Id">Güncelle</a> |
                                <a asp-action="Remove" asp-controller="Application" asp-route-id="@item.Id">Sil</a>
                            </td>

                        </tr>

                    }

                </tbody>
            </table>

        }
        else
        {
            <div class="my-3 text-end">
                <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
            </div>
            <div class="mt-3 text-center lead">
                Herhangi bir ilan bulunmamaktadır.
            </div>
        }
    }
</div>
